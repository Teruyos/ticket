<h2>商品購入</h2>

<%= form_for(@post) do |f| %>

<div class="field">
	<p>Artist</p>
	<%= @post.artist %>
</div>

<div class="field">
	<p>Title</p>
	<%= @post.title %>
</div>

<div class="field">
	<p>Place</p>
	<%= @post.place %>
</div>

<div>
	<p>Category</p>
	<%= @post.category_id %>
</div>

<div class="field">
	<p>Date</p>
	<%= @post.date %>
</div>

<div class="field">
	<p>Price</p>
	<%= @post.price %>
</div>

<div class="field">
	<p>購入後の残枚数</p>
	<%= @post.amount %>
	<%= f.hidden_field :amount, :value => @post.amount %>

</div>

<div class="field">
	<p>Content</p>
	<%= @post.content %>
</div>

<div class="field">
	<p>購入枚数</p>
	<%= @buy_amount %>
	 <%= f.fields_for :buys do |f| %>
 	 <%= f.text_field :amount, :value => @buy_amount %>
	<% end %>

</div>

	<%= f.submit :value => "購入する" %> 
<% end %>

<%= link_to 'home', posts_path %>